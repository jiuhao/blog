html
    head
        meta(charset="UTF-8")
        title GGBlog
        link(rel="shortcut icon" type="image/x-icon" href="./images/icon.png" media="screen")
        style
            include ../public/css/header.css
            include ../public/css/personalCenter.css
    body#body
        include ./layout/header
        div.center-header
            div.left
                div.author
                    div.headImage
                        img(':src'='user.headImageUrl')
                    div.nick(v-text='user.nick')
                    div.other
                        div.fans 粉丝
                            span 12
                        div.attention 关注
                            span 20
                    div.editor
                        span 编辑

            div.right
            div.bottom
                ul.nav-menu
                    li
                        a() 学术
                            b(v-text="num.academic < 999 ? num.academic : '999+'")
                    li
                        a() 话题
                            b(v-text="num.topic < 999 ? num.topic : '999+'")
                    li
                        a() 投票
                            b(v-text="num.vote < 999 ? num.vote : '999+'")
                    li
                        a() 活动
                            b(v-text="num.activity < 999 ? num.activity : '999+'")
                    li
                        a() 情感
                            b(v-text="num.emotion < 999 ? num.emotion : '999+'")
                    li
                        a() 事件
                            b(v-text="num.event < 999 ? num.event : '999+'")
                    li
                        a() 帮助
                            b(v-text="num.help < 999 ? num.help : '999+'")
                div.bottom-nav
        div.center-body
            div#article
                div.card(v-for='item in personalData.academic' '@click'='skip(item._id)')
                    div.article
                        div.article-content
                            div.article-info
                                h3.article-title(v-text='item.title')
                                p.article-text(v-text='item.outline')
                            div.article-cover
                                img(':src'='item.posterUrl || item.author.headImageUrl')
                        div.article-footer
                            span(v-text='item.publishTime')
                            div.r
                                div.eye
                                span(v-text='item.visits')
            div#vote
            div.card-more('@click'='getMorePersonalData()')
                button.more 加载更多
        script(src='http://cdn.bootcss.com/vue/1.0.27/vue.min.js')
        script(src='http://cdn.bootcss.com/jquery/2.0.1/jquery.min.js')
        script(src='http://cdn.bootcss.com/vue-resource/1.0.3/vue-resource.min.js')
        script
            include ../public/javascript/md5.js
            include ../public/javascript/utils.js
            include ../public/javascript/personalCenter.js