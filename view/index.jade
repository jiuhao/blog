                                div.v-num
                                    span(v-text="num.academic < 999 ? num.academic : '999+'")
                        li.m-i
                            a.i-link(href='/topic')
                                em 话题
                                div.v-num
                                    span(v-text="num.topic < 999 ? num.topic : '999+'")
                        li.m-i
                            a.i-link(href='/vote')
