                                div.topic-preview-list-wrapper
                                    ul.topic-preview(style='width: 500%; margin-left: -100%;')
                                        li
                                            a(href='')
                                                img(src='//i0.hdslb.com/bfs/archive/ae0a77b90b1e4b827a6fd1b6c6def2c8fbe51996.jpg')
                                        li
                                            a(href='')
                                                img(src='//i0.hdslb.com/bfs/archive/0e596dae6871ebee272aecb41b2ed7a2b6492d4a.jpg')
