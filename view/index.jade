                            a.i-link(href='/help')
                                em 帮助
                                div.v-num
                                    span(v-text="num.help < 999 ? num.help : '999+'")
                    div.search
                        form#searchForm(action='' target='_blank')
                            input.search-keyword(name='keyword' placeholder="可输入想查询的关键词～")
                            button.search-submit(type='submit')
                        a.link-ranking(href='/ranking')
                            span 排行榜
        div.b-page-body
            div#index-container.index-container
                div.container-top-wrapper
                    div#b-index-top.container-top
                        div.b-l
