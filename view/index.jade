        style
            include ../public/css/index.css
    body#body
        div.top
            div.center
                div.right-box
                    ul.menu
                        li.u-i.i-user
                            a.i-link(href= '/personalCenter' v-show='user' style='display: hidden')
                                img.i-face(':src'='user.headImageUrl')
